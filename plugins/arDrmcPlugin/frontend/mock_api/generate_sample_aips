#! /usr/bin/env node
/*

Generate random sample AIP data

Examples:
  ./generate_sample_aips 120 # generate 120 sample AIPs

*/

var fs = require('fs'),
    uuid = require('node-uuid'),
    casual = require('casual'),
    amountToGenerate = process.argv[process.argv.length-1],
    names,
    classifications;

// show usage if arg length is wrong or final arg isn't a number
if (process.argv.length != 3 || !(parseInt(amountToGenerate, 10) > 0)) {
  console.log('Usage: ' + process.argv[1] + ' <number of AIPs to generate>');
  process.exit();
}

// read list of names (taken from ElasticSearch project):
// https://raw2.github.com/elasticsearch/elasticsearch/master/src/main/resources/config/names.txt
names = fs.readFileSync(__dirname + '/sample_data/names.txt').toString().split("\n");
names.pop();

// read list of common mime types
commonMimeTypes = fs.readFileSync(__dirname + '/sample_data/commonmimetypes.txt').toString().split("\n");
names.pop();

// read list of classifications
classifications = [];
fs.readFileSync(__dirname + '/sample_data/classifications.txt').toString().split("\n").forEach(function (value, index, array) {
  var parts = value.split(",");
  if (parts.length < 2) {
    return;
  }
  classifications.push({ id: parts[0], name: parts[1] });
});

function getRandomInt(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}

function getRandomFromArray(arrayData) {
  return arrayData[getRandomInt(0, arrayData.length - 1)]
}

function generateAIP(name, classification) {
  var dateAndTime = casual.date(format = 'YYYY-MM-DD') + ' ' + casual.time(format = 'HH:mm:ss') + ' EST';

  return {
    'uuid': uuid.v4(),
    'name': name,
    'class': classification.name,
    'classid': classification.id,
    'description': casual.sentence + ' ' + casual.sentence + ' ' + casual.sentence,
    'subdirectoryquantity': getRandomInt(0, 10),
    'objectquantity': getRandomInt(0, 10),
    'size': getRandomInt(100000, 100000000),
    'createdat': dateAndTime,
    'parent': '',
    'partof': '',
    'objects': JSON.stringify(generateFileData())
  };
}

function generateFileData() {
  var files = [],
      mimetype,
      filename;

  for(var i = 0; i < getRandomInt(1, 5); i++) {
    // sometimes the mime type will be unusual
    if (getRandomInt(1, 4) == 1) {
      mimetype = casual.mime_type;
    } else {
      mimetype = getRandomFromArray(commonMimeTypes);
    }

    filename = casual.word + '.' + casual.file_extension;
    files.push({
      'filepath': 'objects/' + filename,
      'mimetype': mimetype,
      'size': getRandomInt(10000, 10000000)
    });
  }

  return files;
}

console.log('[');

var parents = {},
    previousAIP = false,
    currentParent;

for (var i = 0; i < amountToGenerate; i++) {
  var commandAfterJSON = (i < (amountToGenerate - 1)) ? ',' : '',
      name = getRandomFromArray(names),
      classification = getRandomFromArray(classifications),
      aip = generateAIP(name, classification);

  // random change this AIP might be child of the previous AIP
  if (previousAIP && getRandomInt(0, 1) == 1) { 
    aip.parent = previousAIP.uuid; 
    parents[aip.uuid] = aip.parent;

    // determine top-level parent
    currentParent = previousAIP.uuid;
    while(typeof parents[currentParent] != 'undefined') {
      currentParent = parents[currentParent];
    }
    aip.partof = currentParent;
  }

  console.log('  ' + JSON.stringify(aip) + commandAfterJSON);
  previousAIP = aip;
}

console.log(']');
